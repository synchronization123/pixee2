import base64
import zlib
import marshal
import textwrap

ROUNDS = 10

def encrypt_layer(code_bytes):
    compiled = compile(code_bytes, "<secure>", "exec")
    marshaled = marshal.dumps(compiled)
    compressed = zlib.compress(marshaled)
    encoded = base64.b64encode(compressed)
    return encoded

# -------- FILES --------
INPUT_FILE = "your_script.pyw"
OUTPUT_FILE = "your_script_encrypted.pyw"

with open(INPUT_FILE, "r", encoding="utf-8") as f:
    code = f.read().encode()

data = code
for _ in range(ROUNDS):
    data = encrypt_layer(data)

# Convert bytes → safe string
payload = data.decode()

final_code = f'''
import base64, zlib, marshal

data = "{payload}"

for _ in range({ROUNDS}):
    data = marshal.loads(
        zlib.decompress(
            base64.b64decode(data)
        )
    )

exec(data)
'''

final_code = textwrap.dedent(final_code)

with open(OUTPUT_FILE, "w", encoding="utf-8") as f:
    f.write(final_code)

print("✔ Encryption successful")
print(f"✔ Output file: {OUTPUT_FILE}")